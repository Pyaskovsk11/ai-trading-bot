# AI Trading Bot Configuration - ПРИМЕР

# Режим торговли: demo, live, backtest
TRADING_MODE=demo

# Биржа: bingx, binance, bybit, okx
EXCHANGE=bingx

# API ключи (ОБЯЗАТЕЛЬНО для реальной торговли)
API_KEY=Вставь свой ключ 
SECRET_KEY=Вставь секретный ключ 
SANDBOX=true  # true для тестовой среды, false для продакшн

# Торговые параметры
INITIAL_CAPITAL=10000
MAX_DAILY_LOSS=0.02  # 2% максимальный дневной убыток
MAX_POSITION_SIZE=0.1  # 10% максимальный размер позиции
MAX_OPEN_POSITIONS=5

# Торговые пары (через запятую)
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,ADAUSDT,BNBUSDT,SOLUSDT,XRPUSDT,DOGEUSDT,AVAXUSDT

# Настройки стратегий
ENABLE_SCALPING=true
ENABLE_SWING_TRADING=true
ENABLE_ML_PREDICTIONS=false

# Telegram уведомления (опционально)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Риск-менеджмент
USE_STOP_LOSS=true
USE_TAKE_PROFIT=true
USE_TRAILING_STOP=true
